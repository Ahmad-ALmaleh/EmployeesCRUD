@model IEnumerable<Employee>

<h1>All Employees</h1>
<a asp-action="Create" class="btn btn-primary">Create a new employee</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeNumber)

           </th>
            <th>
                @Html.ActionLink("Employee Name","Index",new {sortField = "EmployeeName",currentSortField=ViewBag.SortField,sortDirction=ViewBag.SortDirction})
            </th>
            <th>
                @Html.ActionLink("Date of birth","Index",new {sortField = "DOB",currentSortField=ViewBag.SortField,sortDirction=ViewBag.SortDirction})
            </th>
            <th>
                @Html.ActionLink("Hiring Date","Index",new {sortField = "HiringDate",currentSortField=ViewBag.SortField,sortDirction=ViewBag.SortDirction})
            </th>
            <th>
                @Html.ActionLink("Gross Salary","Index",new {sortField = "GrossSalary",currentSortField=ViewBag.SortField,sortDirction=ViewBag.SortDirction})
            </th>
            <th>
                @Html.ActionLink("Net Salary","Index",new {sortField = "NetSalary",currentSortField=ViewBag.SortField,sortDirction=ViewBag.SortDirction})
            </th>
            <th>
                @Html.ActionLink("Department Name","Index",new {sortField = "DepartmentName",currentSortField=ViewBag.SortField,sortDirction=ViewBag.SortDirction})
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HiringDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GrossSalary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NetSalary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td>
                    @Html.ActionLink("Edit","Edit",new {id = item.EmployeeID})
                    @Html.ActionLink("Delete","Delete",new {id = item.EmployeeID},new {onclick = "return confirm('are you sure that you want to delete?');"})
                </td>
            </tr>
        }
    </tbody>
</table>